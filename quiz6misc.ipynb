def computeVelGen(t1, t2):
    L_ab = .4
    L_bc = .35
    w_ab = -.1 / (L_ab * (-math.sin(t2) * math.cos(t1) / math.cos(t2) + math.sin(t1)))
    w_bc = -w_ab * L_ab * math.cos(t1) / (L_bc * math.cos(t2))
    
    return w_ab, w_bc
